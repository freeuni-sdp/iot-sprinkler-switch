<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>iot-sprinkle-switch microservice</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>ge.edu.freeuni.sdp.iot.switches.sprinkler.services;com.fasterxml.jackson.jaxrs.json</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>iot-sprinkle-switch microservice</servlet-name>
		<url-pattern>/webapi/*</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>cross-origin</filter-name>
		<filter-class>ge.edu.freeuni.sdp.iot.switches.sprinkler.core.CORSFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>cross-origin</filter-name>
		<url-pattern>/webapi/*</url-pattern>
	</filter-mapping>
</web-app>